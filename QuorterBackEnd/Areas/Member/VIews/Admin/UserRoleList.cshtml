@using DataEntities.Concrete
@model List<AppUser>

    <h1>User List</h1>

    <table class="table table-bordered">
        <tr>
            <th>User</th>
            <th>Add Role</th>


        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserName</td>
                <td><a asp-controller="Admin" asp-action="AssignRole" asp-route-id="@item.Id" asp-area="Member" class="btn btn-info">Add Role</a></td>


            </tr>
        }

    </table>

<a class="btn btn-primary" href="/Member/Admin/Index">Go Back</a>

