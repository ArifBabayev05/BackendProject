@using QuorterBackEnd.Areas.Member.Models
@model List<RoleAsignViewModel>

<form method="post" > 
        @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check">
                    <input type="hidden" asp-for="@Model[i].RoleId"/>
                    <input type="hidden" asp-for="@Model[i].Name"/>
                    <input type="checkbox" asp-for="@Model[i].Exist" class="form-check-input "/>
                    <label class="form-check-label" asp-for="@Model[i].Exist ">@Model[i].Name</label>
                </div>
            }
    <br />
    <button class="btn btn-info">Save</button>
    </form>
<br />
<a href="/Member/Admin/UserRoleList/" class="btn btn-primary">Go Back</a>
