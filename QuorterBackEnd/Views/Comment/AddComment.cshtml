<div class="ltn__comment-reply-area ltn__form-box mb-30">
    <form asp-action="addcomment" asp-controller="Comment" method="post">
        <h4>Add a Review</h4>
        <div class="mb-30">
        </div>
        <div class="input-item input-item-textarea ltn__custom-icon">
            <textarea name="CommentContent" placeholder="Type your comments...."></textarea>
        </div>
        <div class="input-item input-item-name ltn__custom-icon">
            <input type="text" name="CommentUser" value="@User.Identity.Name" hidden placeholder="Type your name....">
        </div>
        
        <div class="input-item input-item-website ltn__custom-icon">
            <input type="text" value="@ViewBag.i" hidden name="Feature2Id" placeholder="Type your post Id....">
        </div>
        <div class="btn-wrapper">
            <button class="btn theme-btn-1 btn-effect-1 text-uppercase"  type="submit">Submit</button>
        </div>
    </form>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>