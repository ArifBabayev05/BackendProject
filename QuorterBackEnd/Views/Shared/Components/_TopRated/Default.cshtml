@using DataEntities.Concrete
@model List<Feature2>
<!-- Popular Product Widget -->
<div class="widget ltn__popular-product-widget">
    <h4 class="ltn__widget-title ltn__widget-title-border-2">Popular Properties</h4>
    <div class="row ltn__popular-product-widget-active slick-arrow-1">
        <!-- ltn__product-item -->
        @foreach (var item in Model)
        {
            <div class="col-12">
                <div class="ltn__product-item ltn__product-item-4 ltn__product-item-5 text-center---">
                    <div class="product-img">
                        <a asp-controller="Shop" asp-action="ShopDetails" asp-route-id="@item.Id"><img src="~/assets/uploads/@item.MainPhoto" alt="#"></a>
                        <div class="real-estate-agent">
                          
                        </div>
                    </div>
                    <div class="product-info">
                        <div class="product-price">
                            <span>@item.Price<label>/Month</label></span>
                        </div>
                        <h2 class="product-title"><a asp-controller="Shop" asp-action="ShopDetails" asp-route-id="@item.Id">@item.Title</a></h2>
                        <div class="product-img-location">
                            <ul>
                                <li>
                                    <a asp-controller="Shop" asp-action="ShopDetails" asp-route-id="@item.Id"><i class="flaticon-pin"></i> @item.CityName</a>
                                </li>
                            </ul>
                        </div>
                        <ul class="ltn__list-item-2--- ltn__list-item-2-before--- ltn__plot-brief">
                            <li>
                                <span>@item.BedCount </span>
                                Bedrooms
                            </li>
                            <li>
                                <span>@item.BathCount </span>
                                Bathrooms
                            </li>
                            <li>
                                <span>@item.SalesManName </span>
                                square Ft
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        }

    </div>
</div>