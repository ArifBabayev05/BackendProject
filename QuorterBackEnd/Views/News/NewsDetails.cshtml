@model DataEntities.Concrete.News


<div class="ltn__utilize-overlay"></div>

<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="./assets/uploads/@Model.BannerImage">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">News Details</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a asp-controller="Default"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Home</a></li>
                            <li>News Details</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- PAGE DETAILS AREA START (blog-details) -->
<div class="ltn__page-details-area ltn__blog-details-area mb-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="ltn__blog-details-wrap">
                    <div class="ltn__page-details-inner ltn__blog-details-inner">
                        <div class="ltn__blog-meta">
                            <ul>
                                <li class="ltn__blog-category">
                                    <a href="#">Real Estate</a>
                                </li>
                            </ul>
                        </div>
                        <h2 class="ltn__blog-title">
                            @Model.Title
                        </h2>
                        <div class="ltn__blog-meta">
                            <ul>
                                <li class="ltn__blog-author">
                                    <a href="#"><img src="~/assets/uploads/@Model.AuthorImage" alt="#">By: @Model.AuthorName</a>
                                </li>
                                <li class="ltn__blog-date">
                                    <i class="far fa-calendar-alt"></i>@Model.CreateDate
                                </li>

                            </ul>
                        </div>
                        <p>@Model.Content1</p>
                        <img src="~/assets/uploads/@Model.Image2" alt="Image">
                        <h2>@Model.Title1</h2>
                        <p>@Model.Text1</p>
                        <hr>
                        <h2>@Model.Title2</h2>
                        <p>@Model.Text2</p>
                        <hr>
                        <h2>@Model.Title3</h2>
                        <div class="list-item-with-icon-2">
                            <ul>
                                <li>@Model.Text3</li>
                                <li>@Model.Text3</li>

                                <li>@Model.Text3</li>

                                <li>@Model.Text3</li>

                                <li>@Model.Text3</li>


                            </ul>
                        </div>
                        <blockquote>
                            <h6 class="ltn__secondary-color mt-0">BY @Model.AuthorName</h6>
                        @Model.Quote
                        </blockquote>
