@model QuorterBackEnd.Models.UserRegisterViewModel

<div class="ltn__utilize-overlay"></div>

<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Account</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a asp-controller="Default"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Home</a></li>
                            <li>Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- LOGIN AREA START (Register) -->
<div class="ltn__login-area pb-110">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area text-center">
                    <h1 class="section-title">Register <br>Your Account</h1>
                    <p>
                       Welcome To Our Backend Project!
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="account-login-inner">
                    <form method="post" class="register-form" id="login-form">

                        <div class="form-group">
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <span class="lnr lnr-user"></span>
                            <input type="text" class="form-control" placeholder="Name" asp-for="Name">
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="Surname" class="text-danger"></span>
                            <span class="lnr lnr-phone-handset"></span>
                            <input type="text" class="form-control" placeholder="Surname" asp-for="Surname">
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="Mail" class="text-danger"></span>
                            <span class="lnr lnr-envelope"></span>
                            <input type="text" class="form-control" placeholder="Mail" asp-for="Mail">
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                            <span class="lnr lnr-envelope"></span>
                            <input type="text" class="form-control" placeholder="UserName" asp-for="UserName">
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <span class="lnr lnr-lock"></span>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Password">
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            <span class="lnr lnr-lock"></span>
                            <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword">
                        </div>

                        <div class="card text-danger" asp-validation-summary="ModelOnly"></div>
                        <button>
                            <span href="btn ">Register</span>
                        </button>


                    </form>
                    <script src="https://www.gstatic.com/firebasejs/8.9.1/firebase.js"></script>
                    <script src="https://www.gstatic.com/firebasejs/8.9.1/firebase-analytics.js"></script>


                    <div class="by-agree text-center">
                        <p>By creating an account, you agree to our:</p>
                        <p><a href="#">TERMS OF CONDITIONS  &nbsp; &nbsp; | &nbsp; &nbsp;  PRIVACY POLICY</a></p>
                        <div class="go-to-btn mt-50">
                            <a href="login.html">ALREADY HAVE AN ACCOUNT ?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- LOGIN AREA END -->
