<!-- Newsletter Widget -->
<div class="widget ltn__search-widget ltn__newsletter-widget">
    <h6 class="ltn__widget-sub-title">// subscribe</h6>
    <h4 class="ltn__widget-title">Get Newsletter</h4>
    <form action="/Newsletter/SubscribeMail/" method="post">
        <input type="email" name="Mail" placeholder="Search">
        <button id="btn" type="submit"><i class="fas fa-search"></i></button>
    </form>
    <div class="ltn__newsletter-bg-icon">
        <i class="fas fa-envelope-open-text"></i>
    </div>
</div>

<script type="text/javascript">
    $("#btn").click(function () {
        let values = {
            Mail: $("txtMail").val()
        }
        $.ajax({
            type: "post",
            url: "/Newsletter/SubscribeMail/"
            data: values,
            success: function (func) {
                let result = jQuery.parseJSON(func)
            }
        })
    })

</script>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>

